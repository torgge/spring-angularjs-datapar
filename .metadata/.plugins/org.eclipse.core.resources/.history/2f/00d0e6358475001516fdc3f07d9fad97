public class WeatherCliente {
 
    public static void main(String[] args) {
    	private RestTemplate restTemplate = new RestTemplate();

    	  ResponseEntity<OpenWeatherMap> tempo =
          restTemplate.getForEntity("http://api.openweathermap.org/data/2.5/weather?q=Londrina&mode=xml",OpenWeatherMap.class);
    			
        System.out.println("Ex.01");
        System.out.println( tempo.toString() );
        
        //System.out.println("Ex.02");
        //System.out.println( "Cidade: "+ tempo.getCity().getName() );
        //System.out.println( "Temperatura m√°x: "+ tempo.getTemperature().getMax()+" "+tempo.getTemperature().getUnit() );
        
        
        
    }
    
}
