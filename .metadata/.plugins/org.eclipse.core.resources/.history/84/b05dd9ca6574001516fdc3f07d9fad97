'use strict';

angular.module('app')
    .factory('dataFactory', ['$http', function($http) {

    var urlBase = 'api/mercaderia';
    var dataFactory = {};

    dataFactory.getMercaderia = function () {
        return $http.get(urlBase);
    };

    dataFactory.getMercaderia = function (id) {
        return $http.get(urlBase + '/' + id);
    };

    dataFactory.insertMercaderia = function (cust) {
        return $http.post(urlBase, cust);
    };

    dataFactory.updateMercaderia = function (cust) {
        return $http.put(urlBase + '/' + cust.ID, cust)
    };

    dataFactory.deleteMercaderia = function (id) {
        return $http.delete(urlBase + '/' + id);
    };

    return dataFactory;
}]);