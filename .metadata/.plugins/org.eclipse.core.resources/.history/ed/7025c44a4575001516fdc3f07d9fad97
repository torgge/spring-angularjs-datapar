
package MasterChicoSB1.weather.model.teste;
 
import javax.ws.rs.core.MediaType;

import org.apache.catalina.WebResource;

import ch.qos.logback.core.net.server.Client;


public class WeatherCliente {
 
    public static void main(String[] args) {
        Client client = Client.create();
        WebResource resource = client.resource(
        "http://localhost:3000/mensagem/txt");

        String s = resource.get(String.class);
        System.out.println(s);

        resource.type(MediaType.APPLICATION_XML);
        City c = resource.get(City.class);
        
        System.out.println( c.toString() );
        
    }
    
}
